<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dust"
    tools:context="com.example.welcome1.btp1.homepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Level : "
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:textColorLink="@color/colorPrimary"
            android:textSize="36sp" />

        <Button

            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:padding="5dp"

            android:background="@drawable/level1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/level2"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large" />

        <Button
            android:id="@+id/easy_level"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@drawable/easy"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="29sp" />

        <Button
            android:id="@+id/medium_level"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@drawable/medium"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="29sp" />

        <Button
            android:id="@+id/difficult_level"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/difficult"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="29sp" />


        <Button
            android:id="@+id/ninja_level"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ninja"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="29sp" />

        <!--
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="OPTIONS"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:textColorLink="@color/colorPrimary" />
        -->

        <Button
            android:id="@+id/help_button"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/help"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="29sp" />

    </LinearLayout>

</ScrollView>
