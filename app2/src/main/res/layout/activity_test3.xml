<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.welcome1.btp1.test3">

    <Button
        android:id="@+id/speak_button"
        android:layout_width="192dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/audio" />

    <com.example.welcome1.btp1.CanvasView
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/clear_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:background="@color/dust" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_above="@+id/submit_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/erase"
        android:onClick="clearCanvas" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="180dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/nextword" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/quit" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/speak_button"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp" />


</RelativeLayout>
