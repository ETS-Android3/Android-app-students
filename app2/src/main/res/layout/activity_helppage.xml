<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory"
    tools:context="com.example.welcome1.btp1.helppage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:text="INSTRUCTIONS"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:text="This game is intended to get the user familiarise with English words through corresponding sentences and audio means."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:text="There are 4 levels - Easy, Medium, Difficult and Ninja (toughest). You have to complete the  existing level to unlock the higher level(s)."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:text="In each level, you are expected to get thorough with all the sentences and its constituent words in the Training phases."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:text="In Training phases, you can get the audio feed of the sentence using the Audio button."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:text="For switching to next or previous sentence, use the respective arrow buttons."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:text="If you are comfortable with a sentence, you can pop that out from the list by using the Tick button."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:text="When you get comfortable with all the sentences in Training phase(s), the Test phase(s)  will be unlocked, where you get to score."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:text="In the Test phase(s), you will be given the voice input of a word and you should be able to replicate it on the canvas and submit it."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:text="You can view the results of your attempts in Test phase(s), in Results page.."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:background="@drawable/back"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </LinearLayout>
</ScrollView>
